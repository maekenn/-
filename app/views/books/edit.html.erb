<div class="container">
 <div class="container px-5 px-sm-0">
 <div id="error_explanation">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
     <h1>Editing Book</h1>

     <% if @book.errors.any? %>
      <h3><%= @book.errors.count %>error prohibited this obj from being</br>
              saved:</h3>
      <ul>
       <% @book.errors.full_messages.each do |message| %>
       <li><%= message %></li>
     <% end %>
      </ul>
     <% end %>
      <%= form_with model: @book, url: book_path(@book) do |f| %>
       <div class="form-group">
        <div>
         <label for="book_title">Title</label>
        </div>
        <div>
         <%= f.text_field :title, autofocus: true,  class: "form-control book_title" %>
        </div>
       </div>
       <div class="form-group">
        <div>
         <label for="book_opinion">Opinion</label>
        </div>
        <div>
         <%= f.text_area :body, placeholder: "",  class: "form-control book_body" %>
        </div>
       </div>
       <div class="form-group">
         <%= f.submit 'Update Book',class: 'btn btn-success' %>
       </div>
       <a><%= link_to "Show", book_path(@book.id) %></a> |
       <a><%= link_to "Back", books_path %></a>
      <% end %>
    </div>
   </div>
  </div>